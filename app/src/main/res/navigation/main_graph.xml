<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.marvelappremastered.ui.fragments.main.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_filmDetailFragment"
            app:destination="@id/filmDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmDetailFragment"
        android:name="com.example.marvelappremastered.ui.fragments.main.filmDetail.FilmDetailFragment"
        android:label="FilmDetailFragment"
        tools:layout="@layout/fragment_film_detail"/>
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.marvelappremastered.ui.fragments.main.shop.ShopFragment"
        android:label="ShopFragment"
        tools:layout="@layout/fragment_shop">
        <action
            android:id="@+id/action_shopFragment_to_creditCardFragment"
            app:destination="@id/creditCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/creditCardFragment"
        android:name="com.example.marvelappremastered.ui.fragments.main.creditCard.CreditCardFragment"
        android:label="CreditCardFragment"
        tools:layout="@layout/fragment_credit_card"/>
    <fragment
        android:id="@+id/comicsFragment"
        android:name="com.example.marvelappremastered.ui.fragments.main.comics.ComicsFragment"
        android:label="ComicsFragment"
        tools:layout="@layout/fragment_comics"/>
</navigation>
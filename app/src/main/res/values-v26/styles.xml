<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">@dimen/margin40</item>
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="strokeWidth">@dimen/stroke</item>
    </style>

    <style name="Auth.Edit.Text" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginHorizontal">@dimen/margin40</item>
        <item name="android:drawablePadding">@dimen/margin12</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Title.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/very_big_title_size</item>
        <item name="android:layout_marginTop">@dimen/margin40</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Auth.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginHorizontal">@dimen/margin40</item>
        <item name="android:layout_marginTop">@dimen/margin8</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin8</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTintMode">multiply</item>
        <item name="iconGravity">textStart</item>
    </style>
<!--    <item name=""></item>-->

</resources>